<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lista de Horários</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Arial', sans-serif;
        }

        .rodape {
            text-align: center;
            position: fixed;
            width: 100%;
            bottom: 0;
            background-color: #f8f9fa;
            padding: 10px 0;
            font-size: 14px;
        }

        h1 {
            font-size: 36px;
            font-weight: 700;
            color: #333;
            margin-bottom: 40px;
        }

        table {
            width: 100%;
            margin-bottom: 20px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

        th, td {
            padding: 20px;
            text-align: center;
            font-size: 16px;
        }

        /* Cabeçalho da tabela com azul */
        th {
            background-color: #007bff; /* Azul forte */
            color: rgb(0, 0, 0);
            font-weight: bold;
            text-transform: uppercase;
            border-bottom: 2px solid #0056b3; /* Azul mais escuro */
        }

        /* Linhas da tabela sem efeitos de hover */
        tr:nth-child(even) {
            background-color: #ffffff; /* Branco */
        }

        tr:nth-child(odd) {
            background-color: #ffffff; /* Branco */
        }

        td {
            color: #555;
        }

        td a {
            color: #007bff; /* Cor azul para links */
            text-decoration: none;
        }

        td a:hover {
            text-decoration: underline;
        }

    


        /* Modificando a cor do botão ao ser clicado */
        .accordion-button {
            background-color: white !important;
            color: #333;
            border: 1px solid #ddd;
        }

        .accordion-button:focus {
            box-shadow: none;
        }

        .accordion-button:not(.collapsed) {
            background-color: #f1f1f1 !important;
            color: #000;
            border-color: #ddd;
        }

    </style>


<script>
    function exclui(mat, inicio, fim, dia) {
        // Diagnóstico: Verificar se os parâmetros estão sendo passados corretamente
        console.log("Excluindo:", mat, inicio, fim, dia);

        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: "btn btn-success",
                cancelButton: "btn btn-danger"
            },
            buttonsStyling: false
        });

        swalWithBootstrapButtons.fire({
            title: "Remover Horário",
            text: "Deseja realmente excluir?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Sim",
            cancelButtonText: "Não",
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                // Diagnóstico: Verificar a URL antes de enviar a requisição
                console.log("Enviando requisição AJAX para:", "/horarios/apagar/" + mat + "/" + inicio + "/" + fim + "/" + dia);

                $.ajax({
                    url: "/horarios/apagar/" + mat + "/" + inicio + "/" + fim + "/" + dia, // Passando os parâmetros para a URL
                    type: "DELETE",
                    success: function (res) {
                        // Diagnóstico: Verificar resposta
                        console.log("Resposta do servidor:", res);

                        if (res.sucesso) {
                            swalWithBootstrapButtons.fire({
                                title: "Horário Removido!",
                                text: "O horário foi excluído com sucesso.",
                                icon: "success"
                            }).then(() => {
                                window.location.href = "/horarios/listar";
                            });
                        } else {
                            swalWithBootstrapButtons.fire({
                                title: "Erro!",
                                text: res.erro || "Não foi possível excluir o horário.",
                                icon: "error"
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        swalWithBootstrapButtons.fire({
                            title: "Erro!",
                            text: "Não foi possível excluir o horário.",
                            icon: "error"
                        });
                        console.error("Erro ao excluir:", error);
                    }
                });
            } else if (result.dismiss === Swal.DismissReason.cancel) {
                swalWithBootstrapButtons.fire({
                    title: "Cancelado!",
                    text: "A exclusão foi cancelada ;)",
                    icon: "error"
                });
            }
        });
    }
</script>

 
</head>

<body>
    <div class="container py-4">
        <h1 class="text-center">Setor Administrativo - Titanium</h1>

        <!-- Abas de Navegação -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item"><a class="nav-link" href="http://localhost:3000/cliente/listar">Clientes</a></li>
            <li class="nav-item"><a class="nav-link" href="http://localhost:3000/funcionario/listar">Funcionários</a></li>
            <li class="nav-item"><a class="nav-link" href="http://localhost:3000/pagamento/listar">Pagamentos</a></li>
            <li class="nav-item"><a class="nav-link active" href="http://localhost:3000/horarios/listar">Horários</a></li>
        </ul>

        <div class="accordion" id="accordionExample">
            <div class="accordion" id="accordionExample">
                <% Object.keys(horariosAgrupados).forEach(function(nome, index) { %>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading-<%= index %>">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= index %>" aria-expanded="false" aria-controls="collapse-<%= index %>">
                                <%= nome %>
                            </button>
                        </h2>
                        <div id="collapse-<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading-<%= index %>" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <ul>
                                    <% horariosAgrupados[nome].forEach(function(horario) { %>
                                        <li class="d-flex justify-content-between align-items-center">
                                            <span><%= horario.horario_inicio %> às <%= horario.horario_fim %> - <%= horario.dia_semana %></span>
                                            <!-- Formulário de Excluir -->
                                            <form action="/horarios/apagar" method="POST" class="mb-0">
                                                <input type="hidden" name="mat" value="<%= horario.mat_funcionario %>">
                                                <input type="hidden" name="inicio" value="<%= horario.horario_inicio %>">
                                                <input type="hidden" name="fim" value="<%= horario.horario_fim %>">
                                                <input type="hidden" name="dia" value="<%= horario.dia_semana %>">
                                                <button type="button" class="btn btn-danger" onclick="exclui('<%= horario.mat_funcionario %>', '<%= horario.horario_inicio %>', '<%= horario.horario_fim %>', '<%= horario.dia_semana %>');">Excluir</button>

                                            </form>
                                        </li>
                                    <% }); %>
                                </ul>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
        
                
                
                </div>
            </br>
                <a href="http://localhost:3000/horarios/add" class="btn btn-primary">Adicionar Horário</a>
              
            </div>
        </div>
    </div>

    <footer class="rodape">
        <b>&copy; Todos Direitos Reservados TitaniumFit</b>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
