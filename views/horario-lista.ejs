<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lista de Horários</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .rodape {
            text-align: center;
            position: fixed;
            width: 100%;
            bottom: 0;
            background-color: #f8f9fa;
            padding: 10px 0;
        }

        .table th,
        .table td {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>

<body>
    <div class="container py-4">
        <h1 class="text-center">Setor Administrativo - Titanium</h1>
        <br>

        <!-- Abas de Navegação -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item"><a class="nav-link" href="http://localhost:3000/cliente/listar">Clientes</a></li>
            <li class="nav-item"><a class="nav-link" href="http://localhost:3000/funcionario/listar">Funcionários</a>
            </li>
            <li class="nav-item"><a class="nav-link" href="http://localhost:3000/pagamento/listar">Pagamentos</a></li>
            <li class="nav-item"><a class="nav-link active" href="http://localhost:3000/horarios/listar">Horários</a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="funcionario">
                <!-- Horários -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-primary">
                            <tr>
                                <th>Horário</th>
                                <th>Segunda-Feira</th>
                                <th>Terça-Feira</th>
                                <th>Quarta-Feira</th>
                                <th>Quinta-Feira</th>
                                <th>Sexta-Feira</th>
                                <th>Sábado</th>
                                <th>Domingo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let horariosFixos = ["05h às 08h", "08h às 11h", "11h às 14h", "14h às 17h", "17h às 20h"]; %>
                            <% for (let hora of horariosFixos) { %>
                                <tr>
                                    <td><%= hora %></td>
                                    <% for (let dia of ['Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado', 'Domingo']) { %>
                                        <td>
                                            <% if (dia === 'Domingo') { %>
                                                <strong>Fechado</strong>
                                            <% } else { 
                                                let funcionario = resultado.find(item => item.hora === hora && item.dia === dia);
                                                if (funcionario) { %>
                                                    <%= funcionario.nomeFuncionario %>
                                                <% } else { %>
                                                    -
                                                <% } %>
                                            <% } %>
                                        </td>
                                    <% } %>
                                </tr>
                            <% } %>
                        </tbody>
                        
                        <a href="http://localhost:3000/horarios/add" class="btn btn-primary mb-3">Adicionar Horário</a>
                        
                    </table>
                </div>
            </div>
        </div>
    </div>

    <footer class="rodape"><b>&copy; Todos Direitos Reservados TitaniumFit</b></footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>